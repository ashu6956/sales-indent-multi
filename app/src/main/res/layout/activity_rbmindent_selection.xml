<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rbm.RBMIndentSelection"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:orientation="vertical"
        android:focusable="false">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:background="@drawable/rasiseedslogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rasi Seeds (P) Ltd."
                android:textStyle="bold"
                android:textColor="#ff269040"
                android:gravity="end"
                android:textSize="20dp"
                android:freezesText="true"
                android:layout_marginTop="-40dp"
                android:layout_gravity="right"
                android:typeface="serif" />

            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/fhome2"
                android:onClick="CloseActivity"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALES INDENT APPROVE"
                android:id="@+id/textView33"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-50dp"
                android:autoText="false"
                android:layout_marginLeft="30dp"
                android:typeface="serif"
                android:background="#ff6437c2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bnSubmit"
                android:background="@drawable/submit2"
                android:layout_gravity="center"
                android:onClick="saveDataCountCheck"
                android:visibility="gone" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/closeevent"
                android:layout_marginRight="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-100dp"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Linear1"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TM Code"
                    android:layout_marginTop="30dp"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:freezesText="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#2d589a"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:layout_marginLeft="20dp"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:freezesText="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#2d589a"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="-26dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:id="@+id/spSTORbm"
                    android:layout_gravity="right"
                    android:layout_marginTop="-30dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/submit2"
                    android:onClick="EveentGetData"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="1500dp"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ListView
                        android:layout_width="2500dp"
                        android:layout_height="match_parent"
                        android:id="@+id/listView"
                        android:focusable="false"
                        android:longClickable="false"
                        android:headerDividersEnabled="false"
                        android:footerDividersEnabled="false"
                        android:focusableInTouchMode="false"
                        android:fastScrollAlwaysVisible="false"
                        android:fastScrollEnabled="false"
                        android:nestedScrollingEnabled="false"
                        android:minHeight="30dp"
                        android:layout_marginTop="-10dp" />
                </LinearLayout>
            </ScrollView>
        </HorizontalScrollView>


    </LinearLayout>
</LinearLayout>
