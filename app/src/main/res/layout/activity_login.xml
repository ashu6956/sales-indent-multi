<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".salesindent.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:freezesText="true"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/acsenlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-70dp"
            android:freezesText="true"
            android:gravity="end"
            android:text="@string/toolbar_title_name"
            android:textColor="#ff269040"
            android:textSize="17dp"
            android:layout_marginEnd="8dp"

            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/rasiseeds"
            android:freezesText="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:id="@+id/textView33"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#df1f2d7b"
                android:gravity="center"
                android:text="User Login"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />


            <TextView
                android:id="@+id/snackbar_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:freezesText="true"
                android:singleLine="false"
                android:text="User Id"
                android:textColor="#ff1f257f"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="-26dp"
                android:layout_marginRight="15dp"
                android:freezesText="true"
                android:text=":"
                android:textColor="#2d589a"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserId"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="-40dp"
                android:drawableLeft="@drawable/username"
                android:ems="10"
                android:hint=" User Id"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:freezesText="true"
                android:singleLine="false"
                android:text="Password"
                android:textColor="#ff1f257f"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="-34dp"
                android:layout_marginRight="15dp"
                android:freezesText="true"
                android:text=":"
                android:textColor="#2d589a"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="-40dp"
                android:drawableLeft="@drawable/password4"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:textSize="18dp"
                android:typeface="monospace" />

            <CheckBox

                android:id="@+id/cbShowPwd"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:text="Show Password"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:freezesText="true"
                android:singleLine="false"
                android:text="Division"
                android:textColor="#ff1f257f"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="-28dp"
                android:layout_marginRight="15dp"
                android:freezesText="true"
                android:text=":"
                android:textColor="#2d589a"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                />

            <CheckBox
                android:id="@+id/cbVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-28dp"
                android:layout_marginEnd="110dp"
                android:hint="Veg"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:typeface="serif" />

            <CheckBox
                android:id="@+id/cbFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-33dp"
                android:layout_marginEnd="40dp"
                android:hint="FC"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="gone"
                />

            <ImageButton

                android:id="@+id/imageButton15"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/login3"
                android:onClick="onLoginButtonClick" />

            <ImageView
                android:id="@+id/googleimageupdate"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/googleplayimg"
                android:onClick="playstoreupdatelink"
                android:visibility="gone" />



            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:text="version: "
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearupdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="230dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A new update is available. Please update the application and try again"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/updatetext"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/log_bg"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="UPDATE"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
